<section class="d-grid-dashboard vh-100">
  <%= render '/shared/sidebar' %>
  <main role="main" class="main">
    <section class="dashboard-head mb-2">    
      <h2>
        View Articles
      </h2>
      <a href="/" class="h-self-end">
        <%= image_tag 'https://secure.gravatar.com/avatar/2e9ed4a4f824520785e6562cfa37ac7d.png?d=retro&r=PG&s=50', class:'img-responsive radius-50' %>      
      </a>
    </section>
    <section>
      <article aria-label="Article view head">
        <h3>
          Article List
        </h3>
      </article>
      <article aria-label="Article view table" class="table-layout mb-2">
        <% if @posts.any? %>
          <table class="table">
            <thead>
              <tr>
                <th>
                  #
                </th>
                <th>
                  Title
                </th>
                <th>
                  Is Published
                </th>
                <th>
                  Create at
                </th>
                <th class="text-right">
                  Actions
                </th>
              </tr>
            </thead>
            <tbody>
              <% @posts.each_with_index do |post, index| %>
              <tr>
                <td>
                  <%= index + 1 %>
                </td>
                <td>
                  <%= link_to post.title, post, class:'btn-link' %>
                </td>
                <td>
                  <% if post.published.nil? %>
                    <span class="text-warning">
                      &cross;
                    </span>
                  <% else %>
                    <span class="text-primary">
                      &check;
                    </span>
                  <% end %>
                </td>
                <td>
                  <%= distance_of_time_in_words(post.created_at, Time.now)%>
                  ago
                </td>
                <td class="text-right">
                  <%= link_to edit_post_path(post), class:"btn btn-sm btn-action btn-edit" do %>
                    <svg aria-hidden="true" focusable="false" class="svg-inline" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><path fill="currentColor" d="M497.9 142.1l-46.1 46.1c-4.7 4.7-12.3 4.7-17 0l-111-111c-4.7-4.7-4.7-12.3 0-17l46.1-46.1c18.7-18.7 49.1-18.7 67.9 0l60.1 60.1c18.8 18.7 18.8 49.1 0 67.9zM284.2 99.8L21.6 362.4.4 483.9c-2.9 16.4 11.4 30.6 27.8 27.8l121.5-21.3 262.6-262.6c4.7-4.7 4.7-12.3 0-17l-111-111c-4.8-4.7-12.4-4.7-17.1 0zM124.1 339.9c-5.5-5.5-5.5-14.3 0-19.8l154-154c5.5-5.5 14.3-5.5 19.8 0s5.5 14.3 0 19.8l-154 154c-5.5 5.5-14.3 5.5-19.8 0zM88 424h48v36.3l-64.5 11.3-31.1-31.1L51.7 376H88v48z"></path></svg>
                  <% end %>
                  <%= link_to post, method: :delete, data: { confirm: 'Are you sure?' }, class:"btn btn-sm btn-action btn-delete" do %>
                    <svg aria-hidden="true" focusable="false" data-prefix="fas" data-icon="trash-alt" class="svg-inline" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 448 512"><path fill="currentColor" d="M32 464a48 48 0 0 0 48 48h288a48 48 0 0 0 48-48V128H32zm272-256a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zm-96 0a16 16 0 0 1 32 0v224a16 16 0 0 1-32 0zM432 32H312l-9.4-18.7A24 24 0 0 0 281.1 0H166.8a23.72 23.72 0 0 0-21.4 13.3L136 32H16A16 16 0 0 0 0 48v32a16 16 0 0 0 16 16h416a16 16 0 0 0 16-16V48a16 16 0 0 0-16-16z"></path></svg>
                  <% end %>
                </td>
              </tr>
              <% end %>
            </tbody>
          </table>          
        <% else %>
          <div aria-label="There is no record" class="text-center">          
            <h3>
              There is no record yet!
            </h3>
            <p>
              Let's <%= link_to 'create', new_post_path, class:"btn-link" %> your first awesome post.
            </p>
          </div>
        <% end %>
      </article>
    </section>
  </main>
</section>


