<%= form_with(model: post, local: true) do |form| %>
  <% if post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

 <div class="form-group-inline mb-1">
    <%= form.label :published, 'Would you like to publish this article?' %>
    <%= form.check_box :published %>
  </div>

  <div class="form-group mb-1">
    <%= form.label :title %>
    <%= form.text_field :title, class:'form-control' %>
  </div>

  <div class="form-group mb-1">
    <%= form.label :content %>
    <%= form.text_area :content, class:'form-control textarea-control', rows:'10' %>
  </div>

  <div class="btn-group">
    <%= link_to 'Back', posts_path, class:'btn btn-block btn-outline' %>
    <%= form.submit 'Publish', :class => 'btn btn-block btn-primary' %>
  </div>
<% end %>

